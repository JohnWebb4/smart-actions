{
  "name": "smart-actions",
  "version": "1.0.0",
  "description": "Smart Actions using DialogFlow and Firebase",
  "main": "public/index.html",
  "scripts": {
    "build": "webpack --mode=production",
    "build:watch": "webpack --mode=development --watch",
    "deploy:all": "firebase deploy",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "firebase deploy --only hosting",
    "serve": "firebase serve --only hosting",
    "serve:all": "firebase serve",
    "start": "npm run build && npm run serve",
    "start:all": "npm run build && npm run serve",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JohnWebb4/smart-actions.git"
  },
  "keywords": [
    "Smart",
    "Actions",
    "DialogFlow",
    "Firebase"
  ],
  "author": "JohnWebb4",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JohnWebb4/smart-actions/issues"
  },
  "homepage": "https://github.com/JohnWebb4/smart-actions#readme",
  "dependencies": {
    "firebase": "^7.2.1",
    "firebaseui": "^4.2.0",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-router-dom": "^5.1.2",
    "typescript": "^3.6.4"
  },
  "devDependencies": {
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.2",
    "@types/react-router-dom": "^5.1.0",
    "firebase-tools": "^7.6.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "ts-loader": "^6.2.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "./bin/pre-push.sh"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  }
}
